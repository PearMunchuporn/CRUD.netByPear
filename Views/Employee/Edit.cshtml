
@{
    ViewData["Title"] = "Edit";
}

@model Employee;

<h1 class="text-center">Edit Employee</h1>

<form method="post" asp-controller="Employee" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input type="text" asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn rounded btn-primary my-3">Update</button>

</form>