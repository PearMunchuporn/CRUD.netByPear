@model IEnumerable<CRUD.Models.Employee>;
@{
    ViewData["Title"] = "Show Employee";
 
}

<a class="btn btn rounded-3 btn-primary my-3 py-2"
   asp-controller="Employee"
   asp-action="Create">+ Add Employee</a>

<h1 class="text-center mb-3">Show Emoployee</h1>


<table class="table table-striped">
    <thead>
      <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Position</th>
          <th>Edit</th>
          <th>Delete</th>
      </tr>
    </thead>
    <tboby>
        @foreach (var employee in Model){
       <tr>
          <td>@employee.Name</td>
          <td>@employee.Age</td>
          <td>@employee.Position</td>
          <td><a class="btn btn rounded btn-warning" 
              asp-controller="Employee"
              asp-route-id="@employee.id"
              asp-action="Edit">Edit</a>
          </td>
          <td><a class="btn btn rounded btn-danger"
                   asp-controller="Employee"
                   asp-route-id="@employee.id"
                   asp-action="Delete"
                    onclick="return confirm('Conform to delete?')">Delete</a>
                </td>
       </tr>
        }
    </tboby>
</table>
